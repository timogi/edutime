interface PrimaryButtonProps {
  onPress: () => void;
  title: string;
  isLoading?: boolean;
  disabled?: boolean;
  icon?: string;
}

export const PrimaryButton: React.FC<PrimaryButtonProps> = ({
  onPress,
  title,
  isLoading = false,
  disabled = false,
  icon
}) => {
  return (
    <ButtonWithLoading
      variant="solid"
      size="md"
      onPress={onPress}
      isLoading={isLoading}
      disabled={disabled}
      iconName={icon}
      style={ButtonStyles.primary}
    >
      {title}
    </ButtonWithLoading>
  );
};
```

